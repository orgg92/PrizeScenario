<body>
    <div id="form-table">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Participants[0].FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Participants[0].LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Participants[0].PostCode)
                    </th>
                </tr>
            </thead>
            <tbody>
                @try
                {
                    @foreach (var item in Model.Participants)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostCode)
                    </td>


                </tr>
                    }
                }
                catch
                {
                    <tr>
                        There was a problem retrieving records from the database - please contact support.
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>